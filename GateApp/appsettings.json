{
  "Gate": {
    "Id": "GATE_A",
    "ControllerHost": "192.168.10.20",
    "ControllerPort": 502,
    "OpenCommand": "OPEN"
  },
  "Api": {
    "BaseUrl": "https://example.com/api",
    "ValidateEndpoint": "/gate/validate",
    "CaptureEndpoint": "/gate/capture",
    "ApiKey": "YOUR_API_KEY",
    "RetryCount": 3,
    "RetryBackoffSeconds": 1.5
  },
  "Cameras": [
    { "Name": "Cam1", "Rtsp": "rtsp://user:pass@192.168.10.101/Streaming/Channels/101" },
    { "Name": "Cam2", "Rtsp": "rtsp://user:pass@192.168.10.102/Streaming/Channels/101" },
    { "Name": "Cam3", "Rtsp": "rtsp://user:pass@192.168.10.103/Streaming/Channels/101" },
    { "Name": "Cam4", "Rtsp": "rtsp://user:pass@192.168.10.104/Streaming/Channels/101" }
  ],
  "Scanner": {
    "Mode": "KeyboardWedge",
    "SerialPort": "COM3",
    "BaudRate": 9600,
    "EndSequence": "\r"
  },
  "Printing": {
    "UseEscPos": false,
    "PrinterName": "Zjiang-USB"
  },
  "Logging": {
    "Path": "logs/gateapp-.log",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 7
  }
}
